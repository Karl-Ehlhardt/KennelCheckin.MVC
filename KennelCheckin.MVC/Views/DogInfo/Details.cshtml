<div class="shadow-lg p-3 mb-5 bg-white rounded">
    <table class="table">
        <tbody>
            <tr>
                @if (Model.MedicationList.Count() == 0)
                {
                    <h4>Medication Details</h4>
                    <p>@Html.ActionLink("Add", "Create", "Medication", new { id = Model.DogInfo.DogInfoId }, null)</p>
                }
                else if (Model.MedicationList.Count() == 1)
                {
                    <h4>Medication Details</h4>
                    <p>@Html.ActionLink("Add", "Create", "Medication", new { id = Model.DogInfo.DogInfoId }, null)</p>
                }
                else
                {
                    <h4>Medications Details</h4>
                    <p>@Html.ActionLink("Add", "Create", "Medication", new { id = Model.DogInfo.DogInfoId }, null)</p>
                }
            </tr>
            @if (Model.MedicationList.Count() == 0)
            {
            }
            else
            {
                for (int i = 0; i < Model.MedicationList.Count(); i++)
                {
                        <table class="table">
                            <thead>
                                <tr>
                                    <td></td>
                                </tr>
                                <tr>
                                    <th scope="row" class="col-md-2">@Html.DisplayNameFor(model => model.MedicationList.ElementAt(i).Name)</th>
                                    <th class="col-md-2">@Html.DisplayFor(model => model.MedicationList.ElementAt(i).Name)</th>
                                    <td class="col-md-8">
                                            @Html.ActionLink("Edit", "Edit", "Medication", new { id = Model.MedicationList.ElementAt(i).MedicationId }, null) |
                                            @Html.ActionLink("Delete", "Delete", "Medication", new { id = Model.MedicationList.ElementAt(i).MedicationId }, null)
                                    </td>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <th scope="row" class="col-md-2">@Html.DisplayNameFor(model => model.MedicationList.ElementAt(i).Dose)</th>
                                    <td class="col-md-2">@Html.DisplayFor(model => model.MedicationList.ElementAt(i).Dose)</td>
                                    <td class="col-md-8"></td>
                                </tr>
                                <tr>
                                    <th scope="row" class="col-md-2">@Html.DisplayNameFor(model => model.MedicationList.ElementAt(i).MorningMeal)</th>
                                    <td class="col-md-2">@Html.DisplayFor(model => model.MedicationList.ElementAt(i).MorningMeal)</td>
                                    <td class="col-md-8"></td>
                                </tr>
                                <tr>
                                    <th scope="row" class="col-md-2">@Html.DisplayNameFor(model => model.MedicationList.ElementAt(i).EveningMeal)</th>
                                    <td class="col-md-2">@Html.DisplayFor(model => model.MedicationList.ElementAt(i).EveningMeal)</td>
                                    <td class="col-md-8"></td>
                                </tr>
                                <tr>
                                    <th scope="row" class="col-md-2">@Html.DisplayNameFor(model => model.MedicationList.ElementAt(i).Instructions)</th>
                                    <td class="col-md-2">@Html.DisplayFor(model => model.MedicationList.ElementAt(i).Instructions)</td>
                                    <td class="col-md-8"></td>
                                </tr>
                            </tbody>
                        </table>
                }
            }
            </tbody>
        </table>
    </div>

    <p>
        @Html.ActionLink("Back to List", "Index")
    </p>

