@model Kennel.Models.Data.Joining_Data.DogInfo.DisplayOnly.DogInfoDetails

@{
    ViewBag.Title = "Details";
}

<p>
    @Html.ActionLink("Back to List", "Index")
</p>
<div class="row">
    <div class="col-md-8 mx-auto">
        <h2 class="text-center">@Model.DogBasic.DogName Details</h2>
        @if (Model.DogInfo.DogImageId == 0)
        {
            <h4 class="text-center">No Image</h4>
            <p class="text-center">@Html.ActionLink("Add", "Create", "DogImage", new { id = Model.DogInfo.DogInfoId }, null)</p>
        }
        else
        {
            <img class="center-block" src="@Url.Action("RenderPhoto", "DogImage", new { photoId = Model.DogInfo.DogImageId })" width="200" height="200" alt="Pet Image" />
            <p class="text-center">
                @Html.ActionLink("Replace", "Edit", "DogImage", new { id = Model.DogInfo.DogImageId }, null) |
                @Html.ActionLink("Delete", "Delete", "DogImage", new { id = Model.DogInfo.DogImageId }, null)
            </p>
        }
    </div>
</div>

<div class="shadow-lg p-3 mb-5 bg-white rounded">
    <table class="table">
        <tbody>
            <tr>
                <h4>Basics</h4>
                <p>@Html.ActionLink("Edit", "Edit", "DogBasic", new { id = Model.DogBasic.DogBasicId }, null)</p>
            </tr>
            <tr>
                <th scope="row" class="col-md-2">@Html.DisplayNameFor(model => model.DogBasic.DogName)</th>
                <td class="col-md-2">@Html.DisplayFor(model => model.DogBasic.DogName)</td>
                <td class="col-md-8"></td>
            </tr>
            <tr>
                <th scope="row">@Html.DisplayNameFor(model => model.DogBasic.Breed)</th>
                <td>@Html.DisplayFor(model => model.DogBasic.Breed)</td>
            </tr>
            <tr>
                <th scope="row">@Html.DisplayNameFor(model => model.DogBasic.Weight)</th>
                <td>@Html.DisplayFor(model => model.DogBasic.Weight)</td>
            </tr>
        </tbody>
    </table>
</div>

<div class="shadow-lg p-3 mb-5 bg-white rounded">
    <table class="table">
        <tbody>
            <tr>
                <h4>Food</h4>
                @if (Model.DogInfo.FoodId == 0)
                {
                    <h5>If there is no food entered, your dog will be fed one time a day based on their weight.</h5>
                    <p>@Html.ActionLink("Add", "Create", "Food", new { id = Model.DogInfo.DogInfoId }, null)</p>
                }
                else
                {
                    <p>
                        @Html.ActionLink("Edit", "Edit", "Food", new { id = Model.Food.FoodId }, null) |
                        @Html.ActionLink("Delete", "Delete", "Food", new { id = Model.Food.FoodId }, null)
                    </p>
                }
            </tr>
            @if (Model.DogInfo.FoodId == 0)
            {
            }
            else
            {
                <tr>
                    <th scope="row" class="col-md-2">@Html.DisplayNameFor(model => model.Food.Name)</th>
                    <td class="col-md-2">@Html.DisplayFor(model => model.Food.Name)</td>
                    <td class="col-md-8"></td>
                </tr>
                <tr>
                    <th scope="row" class="col-md-2">@Html.DisplayNameFor(model => model.Food.AmountPerMeal)</th>
                    <td class="col-md-2">@Html.DisplayFor(model => model.Food.AmountPerMeal)</td>
                    <td class="col-md-8"></td>
                </tr>
                <tr>
                    <th scope="row" class="col-md-2">@Html.DisplayNameFor(model => model.Food.MorningMeal)</th>
                    <td class="col-md-2">@Html.DisplayFor(model => model.Food.MorningMeal)</td>
                    <td class="col-md-8"></td>
                </tr>
                <tr>
                    <th scope="row" class="col-md-2">@Html.DisplayNameFor(model => model.Food.EveningMeal)</th>
                    <td class="col-md-2">@Html.DisplayFor(model => model.Food.EveningMeal)</td>
                    <td class="col-md-8"></td>
                </tr>

            }
        </tbody>
    </table>
</div>

